<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg2"
    android:padding="25dp"
    tools:context=".ui.Main.Topup.Detail.DetailTopup">
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#6780D2 "
        app:cardCornerRadius="25dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <LinearLayout
            android:padding="14dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="26sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:text="Saldo :"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"></TextView>
            <TextView
                android:text="Rp. 100.000,-"
                android:textSize="26sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView

        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#f333"
        android:textSize="26sp"
        android:text="Top Up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="12dp"
        app:cardBackgroundColor="#F1F1F1 "
        app:cardCornerRadius="25dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout

            android:padding="14dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/nominalTopup"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#f333"
                android:gravity="center"
                android:text="Rp.100.000,-"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TextView>
            <TextView
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#818181"
                android:gravity="center"
                android:text="Pastikan jumlah transfer sesuai"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        android:layout_marginTop="30dp"
        app:cardBackgroundColor="#F1F1F1 "
        app:cardCornerRadius="25dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout

            android:padding="14dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/bankAccount"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#f333"
                android:gravity="center"
                android:text="07-577676767676"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TextView>
            <TextView
                android:id="@+id/bankName"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#818181"
                android:gravity="center"
                android:text="Bank Mandiri (008)"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
     <LinearLayout
         android:layout_alignParentBottom="true"
         android:layout_width="match_parent"
android:orientation="horizontal"
         android:padding="25dp"
         android:layout_height="match_parent">
         <RelativeLayout
             android:layout_marginRight="10dp"
             android:layout_gravity="bottom"
             android:layout_weight="1"
             android:background="@drawable/btnbukti"
             android:layout_width="match_parent"
             android:layout_height="70dp">

         </RelativeLayout>
         <RelativeLayout
             android:layout_gravity="bottom"
android:id="@+id/bAlreadyTf"
             android:layout_weight="1"
             android:background="@drawable/btnsudahtf"
             android:layout_width="match_parent"
             android:layout_height="70dp">

         </RelativeLayout>
     </LinearLayout>
    </RelativeLayout>
</LinearLayout>