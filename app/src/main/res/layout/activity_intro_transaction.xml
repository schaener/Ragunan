<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".ui.Main.Transaction.Intro.IntroTransaction">
<LinearLayout
android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/ragunan"
        android:layout_width="76dp"
        android:layout_height="76dp"></ImageView>
    <TextView

        android:textColor="#f333"
        android:layout_marginLeft="12dp"
        android:textSize="25dp"
        android:gravity="center|left"
        android:text="Pass"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"></TextView>
</LinearLayout>

    <ImageView
        android:layout_marginTop="12dp"
        android:src="@drawable/qrcode"
        android:layout_weight="1"
        android:id="@+id/barcode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ImageView>
    <androidx.cardview.widget.CardView
app:cardCornerRadius="25dp"
        android:layout_marginTop="18dp"
        app:cardBackgroundColor="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="#F333"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="Name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></TextView>
                <TextView
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="#F333"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="David"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></TextView>


            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="#F333"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="Date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></TextView>
                <TextView
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="#F333"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="12/12/2019"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></TextView>


            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="#F333"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="Valid Until"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></TextView>
                <TextView
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="#F333"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="01/02/2020"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></TextView>


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_alignParentBottom="true"
            app:cardBackgroundColor="#596FEA"
            app:cardCornerRadius="25dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:gravity="center"
                android:textSize="26sp"
                android:text="Beli"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TextView>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</LinearLayout>