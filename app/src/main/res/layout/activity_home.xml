<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="#f6f6f6"
    tools:context=".ui.Main.Home.Home">
    <androidx.appcompat.widget.Toolbar
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:layout_gravity="center|left"
                android:fontFamily="sans-serif-black"
                android:textSize="26sp"
                android:textColor="#f333"
                android:textStyle="bold"
                android:text="Hello David"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <LinearLayout


                android:layout_weight="1"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView


                    android:layout_gravity="center"
                    android:src="@drawable/ragunan"
                    android:layout_width="70dp"
                    android:layout_height="70dp"></ImageView>
            </LinearLayout>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

<LinearLayout
    android:padding="14dp"
android:layout_marginTop="15dp"
    android:orientation="vertical"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.cardview.widget.CardView
    app:cardBackgroundColor="#596FEA"
    app:cardCornerRadius="25dp"
    android:layout_width="match_parent"
    android:layout_height="70dp">
    <LinearLayout
android:padding="14dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="26sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="Saldo :"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"></TextView>
   <TextView
       android:text="Rp. 100.000,-"
       android:textSize="26sp"
       android:textColor="#FFFFFF"
       android:gravity="center"
       android:layout_weight="1"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

   </TextView>
        <ImageView
            android:src="@drawable/add"

            android:layout_width="50dp"
            android:layout_height="match_parent"></ImageView>
    </LinearLayout>
</androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/BstartJourney"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#596FEA"
        app:cardCornerRadius="18dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView

                android:textColor="#FFFFFF"
                android:textSize="36sp"
                android:gravity="center|bottom"
                android:layout_weight="1"
                android:text="Start"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TextView>
            <TextView
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:textSize="36sp"
                android:gravity="center|top"
                android:text="The Journey"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/CVbuy"
          android:layout_alignParentBottom="true"
            app:cardBackgroundColor="#596FEA"
            app:cardCornerRadius="25dp"
android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:gravity="center"
                android:textSize="26sp"
                android:text="Beli"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TextView>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</LinearLayout>

</LinearLayout>